.index{
  width: 750rpx;
  height: 1498rpx;
  background: linear-gradient(180deg, #4C89FF 0%, #46B5FF 4%, #4FCCFE 8%, #A5FAF8 19%, #ECF8FB 25%);
  padding-bottom: 280rpx;
}
/* 搜索栏 */
.search-wrap{
  align-items: center;
  margin-left: 32rpx;
}
.city{
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 42rpx;
  display: flex;
  align-items: center;
}
.down-icon{
  width: 0;
  height: 0;
  border-top: 10rpx solid white;
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  margin-left: 8rpx;
}
view.search {
  display: flex;
  flex-direction: row;
  height: 98rpx;
  background: #efeff4;
  align-items: center;
}

view.searchItem {
  width: 394rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  background: #fff;
  flex-direction: row;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  margin-right: 16rpx;
  margin-left: 20rpx;
}

view.searchItem image {
  height: 42rpx;
  width: 42rpx;
  align-self: center;
  margin-left: 32rpx;
  margin-right: 8rpx;
}

view.searchItem input {
  flex: 1;
  font-size: 30rpx;
}
/* 导航列表 */
.nav-list{
  width: 562rpx;
  height: 181rpx;
  background: #fff;
  box-shadow: 8rpx 8rpx 16rpx 0rpx rgba(143,183,193,0.2), 0rpx -4rpx 20rpx 0rpx rgba(181,219,213,0.12);
  border-radius: 16rpx;
  margin: 0 auto;
  justify-content: space-between;
  align-items: center;
  padding: 0 66rpx 0 66rpx;
  margin-top: 46rpx;
}
.nav-list-icon{
  width: 72rpx;
  height: 72rpx;
}
.item-nav{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-nav .name{
  font-size: 26rpx;
  font-weight: 400;
  color: #171717;
  line-height: 32rpx;
  margin-top: 8rpx;
}
.flex{
  display: flex;
}
/* 一级筛选条件 */
.filter-1{
  margin-top: 22rpx;
}
.item-filter-1{
  font-size: 32rpx;
  font-weight: 500;
  color: #171717;
  line-height: 44rpx;
  margin-left: 32rpx;
}
.item-filter-1.actvie{
  color: #4C91FF;
}
/* 二级筛选条件 */
.filter-2{
  margin-top: 24rpx;
  margin-left: 16rpx;
}
.item-filter{
  height: 56rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #E0E0E0;
  font-size: 24rpx;
  font-weight: 400;
  color: #4F4F4F;
  line-height: 56rpx;
  text-align: center;
  margin-left: 16rpx;
  padding: 0 16rpx;
}
.item-filter.actvie{
  color: #4C91FF;
  border: 2rpx solid #4C91FF;
}
/* 换电站列表 */
.station-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 32rpx;
}
.item-station{
  width: 624rpx;
  background: #FFFFFF;
  box-shadow: 8rpx 24rpx 40rpx 8rpx rgba(179,203,238,0.16), 0rpx -4rpx 20rpx 0rpx rgba(181,219,213,0.12);
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 32rpx;
}
.line-1,.line-3{
  display: flex;
  justify-content: space-between;
}
.status{
  display: inline-block;
  width: 98rpx;
  height: 40rpx;
  background: linear-gradient(133deg, #6598D3 0%, #7DA0CA 19%, #C1D0E8 100%);
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  vertical-align: text-top;
  margin-top: 6rpx;
}
.disabled .name-text{
  color: #C8CDCE;
  margin-left: 8rpx;
}
.name{
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 50rpx;
}
.rmb{
  font-size: 28rpx;
  font-weight: 400;
  color: #4C91FF;
  line-height: 40rpx;
}
.price{
  font-size: 40rpx;
  font-family: Roboto-Medium, Roboto;
  font-weight: 500;
  color: #4C91FF;
  line-height: 43rpx;
}
.price-text{
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
  margin-left: 4rpx;
}
.address-icon{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.address{
  font-size: 28rpx;
  font-weight: 400;
  color: #808080;
  line-height: 40rpx;
  margin-left: 8rpx;
}
.excharge .excharge-icon{
  width: 48rpx;
  height:48rpx;
  vertical-align: text-bottom;
}
.excharge .val{
  font-size: 56rpx;
  font-weight: 500;
  color: #4C91FF;
  line-height: 56rpx;
  vertical-align: text-bottom;
}
.excharge .text{
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  line-height: 40rpx;
  margin-left: 4rpx;
}
.distance{
width: 180rpx;
height: 56rpx;
background: #FFFFFF;
border-radius: 40rpx;
border: 2rpx solid #4C91FF;
font-size: 28rpx;
font-weight: 400;
color: #4C91FF;
line-height: 40rpx;
display: flex;
align-items: center;
  overflow: hidden;
}
.nav-icon-wrap{
  width: 64rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #A5C7FF 0%, #4C91FF 100%);
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(0,0,0,0.11);
  text-align: center;
}

.nav-icon{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-top: 8rpx;
}

.distance-text{
  margin-left: 16rpx;
}
.line-2{
  margin-top: 8rpx;
}
.line-3{
  margin-top: 32rpx;
}